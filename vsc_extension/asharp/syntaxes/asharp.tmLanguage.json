{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "asharp",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"begin": "#",
				"beginCaptures": {
					"0": {
						"name": "comment.line.double-slash"
					}
				},
				"end": "\\n",
				"name": "comment.line.double-slash.asharp"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.asharp",
				"match": "\\b(if|for|while|use|return|delete)\\b"
			},
			{
				"name": "constant.language.asharp",
				"match": "\\b(namespace|mathematical|conceptual|extends|const|segregate|constructor|this|object|type|void|byte|short|char|int|long|float|double|unsigned|signed|native|public|private|protected)\\b"
			}]
		},
		"strings": {
			"patterns": [
				{
					"name": "constant.character.escape.asharp",
					"match": "\\\""
				},
				{
					"name": "string.quoted.double.asharp",
					"begin": "\"",
					"end": "\""
				},
				{
					"name": "string.quoted.single.asharp",
					"begin": "'",
					"end": "'"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.numeric.asharp",
					"match": "\\b0x[a-fA-F0-9]+L*l*|0b[0-1]+L*l*|[0-9]+\\.[0-9]+D*F*d*f*|[0-9]+D*F*d*f*L*l*\\b"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "entity.name.function.asharp",
					"match": "\\w+(?=\\()"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.asharp",
					"match": "\\w+"
				}
			]
		}
	},
	"scopeName": "source.as"
}